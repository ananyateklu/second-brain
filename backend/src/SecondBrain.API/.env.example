# Frontend API URL
VITE_API_URL=http://your-server-ip:5001

# Second Brain - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Firestore Configuration
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_CREDENTIALS_PATH=/app/credentials/firestore-credentials.json

# Firebase Client Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_MEASUREMENT_ID=your-measurement-id

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
XAI_API_KEY=your-xai-api-key

# Vector Store Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=second-brain-index

# CORS Configuration
# Comma-separated list of allowed origins (production URLs)
CORS_ALLOWED_ORIGINS=http://your-server-ip:3000,http://your-domain.com
CORS_ALLOW_LOCAL_NETWORK=false

# Ollama Configuration (if running locally or separate container)
OLLAMA_BASE_URL=http://localhost:11434

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
VITE_API_URL=http://your-server-ip:3000/api
