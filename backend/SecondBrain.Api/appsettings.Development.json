{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "your-connection-string"
  },

  "Authentication": {
    "Jwt": {
      "Secret": "your-jwt-secret",
      "Issuer": "SecondBrain",
      "Audience": "SecondBrain",
      "AccessTokenExpirationMinutes": "600",
      "RefreshTokenExpirationDays": "30"
    }
  },

  "Anthropic": {
    "ApiKey": "your-api-key-here",
    "ApiEndpoint": "https://api.anthropic.com/v1/messages"
  },

  "Grok": {
    "ApiKey": "your-grok-api-key",
    "BaseUrl": "https://api.x.ai/v1"
  },

  "OpenAI": {
    "ApiKey": "your-openai-api-key",
    "ApiEndpoint": "https://api.openai.com/v1"
  },

  "Gemini": {
    "ApiKey": "your-api-key",
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta/"
  },

  "Llama": {
    "OllamaUri": "http://localhost:11434/"
  },

  "Pinecone": {
    "ApiKey": "your-pinecone-api-key",
    "Endpoint": "your-pinecone-endpoint"
  },

  "Storage": {
    "DocumentsPath": "Storage/Documents"
  },

  "DocumentProcessing": {
    "MaxTokensPerChunk": 500,
    "OverlapTokens": 50
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5127"
      },
      "Https": {
        "Url": "https://localhost:7056"
      }
    }
  },

  "AIService": {
    "BaseUrl": "http://localhost:8000"
  }
}