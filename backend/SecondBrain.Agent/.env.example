# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8001
RELOAD=true

# CORS Settings (for C# backend integration)
ALLOWED_ORIGINS=["http://localhost:5127","http://localhost:3000","http://localhost:5173"]

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

GROK_API_KEY=xai-your-grok-api-key-here
GROK_BASE_URL=https://api.x.ai/v1

# Ollama (Local LLM Server)
OLLAMA_BASE_URL=http://localhost:11434

# Redis Settings (for caching and context)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Settings (TTL in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SEARCH=1800
CACHE_TTL_ANALYSIS=7200

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Tool Settings
MAX_PARALLEL_TOOLS=5
TOOL_TIMEOUT_SECONDS=30

# Research Settings
MAX_RESEARCH_ITERATIONS=10
MAX_CONTEXT_LENGTH=10000

# External API Keys (for search tools)
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here
NEWS_API_KEY=your-newsapi-key-here

# Search Configuration
DEFAULT_MAX_SEARCH_RESULTS=10
ENABLE_PARALLEL_SEARCH=true
SEARCH_TIMEOUT_SECONDS=30

# Security Settings
API_KEY_HEADER=X-API-Key
ALLOWED_API_KEYS=[]

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5