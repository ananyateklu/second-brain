{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Second Brain",
  "version": "2.0.0",
  "identifier": "com.secondbrain.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Second Brain",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* https://*.openai.com https://*.anthropic.com https://*.googleapis.com https://*.x.ai; img-src 'self' data: blob: https:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "AI-powered knowledge management system",
    "longDescription": "Second Brain is an intelligent knowledge management system featuring AI-powered chat, smart notes, AI agents with tool execution, and advanced RAG capabilities.",
    "copyright": "Â© 2024 Second Brain",
    "resources": [
      "resources/**/*",
      "icons/tray/*"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": "localhost",
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "providerShortName": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
