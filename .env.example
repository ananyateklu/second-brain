# Second Brain - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# ============================================
# Frontend API URL
# ============================================
VITE_API_URL=http://localhost:5001

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=SecondBrain
JWT_AUDIENCE=SecondBrainUsers
JWT_EXPIRY_MINUTES=1440

# ============================================
# AI Provider API Keys (configure at least one)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
XAI_API_KEY=your-xai-api-key-here

# ============================================
# Vector Store Configuration
# ============================================
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=second-brain-index

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins (production URLs)
CORS_ALLOWED_ORIGINS=http://your-server-ip:3000,http://your-domain.com,http://localhost:5173,https://localhost:5173,http://localhost:3000,https://localhost:3000
CORS_ALLOW_LOCAL_NETWORK=false

# ============================================
# Ollama Configuration (optional, for local models)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Git Integration
# ============================================
# Comma-separated list of allowed repository root paths
GIT_ALLOWED_REPOSITORY_ROOTS=/Users/username/root
# Whether to require user-scoped roots (for multi-user deployments)
GIT_REQUIRE_USER_SCOPED_ROOT=false

# ============================================
# GitHub Integration
# ============================================
# GitHub Personal Access Token
# Required scopes: repo, workflow, read:org (for private repos)
# Create at: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_personal_access_token_here
# Default repository owner (username or organization)
GITHUB_DEFAULT_OWNER=your-github-username-or-org
# Default repository name
GITHUB_DEFAULT_REPO=your-default-repo-name

# ============================================
# Google Search
# ============================================
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-google-search-engine-id

# ============================================
# MediatR License (Commercial Edition)
# ============================================
# Get your license key at https://mediatr.io
MEDIATR_LICENSE_KEY=your-mediatr-license-key-here

# ============================================
# Application Settings
# ============================================
ASPNETCORE_ENVIRONMENT=Production
VITE_API_URL=http://your-server-ip:3000/api

# ============================================
# Cohere
# ============================================
COHERE_API_KEY=your-cohere-api-key